
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager
@{
    ViewData["Title"] = "Dream Academy";
    Layout = null;
}
<style>
    .alert-dismissible {
        font-size: 20px;
    }
 
    .validation-summary-errors {
        font-size: 18px;
    }


    .toast-success {
        margin-top: 40px;
    }

    .btn {
        font-size: 20px;
    }

    a {
        font-size: 17px;
    }


    label {
        font-size: 18px;
    }

    span {
        font-size: 18px;
    }
</style>
<!DOCTYPE html>
<html class="loading" lang="en" data-textdirection="ltr">
<head>

    <link rel="stylesheet" type="text/css" href="~/app-assets/css/vendors.css">
    <!-- END VENDOR CSS-->
    <!-- BEGIN STACK CSS-->
    <link rel="stylesheet" type="text/css" href="~/app-assets/css/app.css">
    <link rel="stylesheet" type="text/css" href="~/app-assets/css/custom.css">
    <!-- END STACK CSS-->
    <!-- BEGIN Page Level CSS-->
    <link rel="stylesheet" type="text/css" href="~/app-assets/css/core/menu/menu-types/vertical-menu.css">
    <link rel="stylesheet" type="text/css" href="~/app-assets/css/core/colors/palette-gradient.css">
    <link rel="stylesheet" type="text/css" href="~/app-assets/css/pages/login-register.css">
    <!-- END Page Level CSS-->
    <!-- BEGIN Custom CSS-->
    <link rel="stylesheet" type="text/css" href="~/assets/css/style.css">
    <!-- END Custom CSS-->
</head>
<body class="vertical-layout vertical-menu   bg-cyan bg-lighten-2 menu-expanded blank-page blank-page"
      data-open="click" data-menu="vertical-menu" data-col="1-column">
    <!-- ////////////////////////////////////////////////////////////////////////////-->
    <div class="app-content content ">
        <div class="content-wrapper">
            <div class="content-header row">
            </div>
            <div class="content-body">
                <section class="flexbox-container">
                    <div class="col-md-12 align-items-center justify-content-center">


                        <div class="col-md-5 col-sm-12 offset-md-3 col-lg-4 box-shadow-3 p-0" style="border-radius:5%; margin-right:50px;">
                            <div class="card border-grey border-lighten-3 m-0" style="border-radius:5%;">

                                <div class="card-header border-0">
                                    <div class="card-title text-center">
                                        <h2>Login form</h2>
                                        <div class="p-1">
                                            <img src="~/images/StaticImages/Logo.png"style="height:150px;width:150px" alt="branding logo">
                                   
                                        </div>
                                        <h2>@ViewData["Title"]</h2>
                                    </div>

                                </div>
                                <div class="card-content">

                                    <p class="card-subtitle line-on-side text-muted text-center font-small-3 mx-2">
                                        <div asp-validation-summary="All" class="text-danger"></div>
                                    </p>
                                    <div class="card-body pt-0">
                                        <form asp-route-returnurl="@ViewData["ReturnUrl"]" asp-action="Login" asp-controller="Account" data-ajax="true" data-ajax-method="post" class="form-horizontal">
                                            <fieldset class="form-group floating-label-form-group">
                                                <label asp-for="Email"></label>
                                                <input asp-for="Email" class="form-control round border" />
                                                <span asp-validation-for="Email" class="text-danger"></span>
                                            </fieldset>
                                            <fieldset class="form-group floating-label-form-group mb-1">
                                                <label asp-for="Password"></label>
                                                <input asp-for="Password" class="form-control round border" />
                                                <span asp-validation-for="Password" class="text-danger"></span>
                                            </fieldset>
                                            <div class="form-group row">
                                                <div class="col-md-6 col-12 text-center text-sm-left">
                                                    <fieldset>
                                                        <div class="checkbox">
                                                            <label asp-for="RememberMe">
                                                                <input asp-for="RememberMe" />
                                                                @Html.DisplayNameFor(m => m.RememberMe)
                                                            </label>
                                                        </div>
                                                    </fieldset>
                                                </div>
                                                <div class="col-md-6 col-12  text-sm-right">
                                                    <div class="">
                                                        <a asp-action="ForgotPassword">Forgot password</a>
                                                    </div>

                                                </div>
                                            </div>
                                            <button type="submit" id="btnLogin" class="btn btn-outline-primary btn-block mb-5 round font-medium-2"><i class="ft-unlock"></i> Login </button>
                                        </form>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
    <!-- ////////////////////////////////////////////////////////////////////////////-->
    <!-- BEGIN VENDOR JS-->
    <script src="~/app-assets/vendors/js/vendors.min.js" type="text/javascript"></script>
    <!-- BEGIN VENDOR JS-->
    <!-- BEGIN PAGE VENDOR JS-->
    <script src="~/app-assets/vendors/js/forms/icheck/icheck.min.js" type="text/javascript"></script>
    <!-- END PAGE VENDOR JS-->
    <!-- BEGIN STACK JS-->
    <script src="~/app-assets/js/core/app-menu.js" type="text/javascript"></script>
    <script src="~/app-assets/js/core/app.js" type="text/javascript"></script>
    <script src="~/app-assets/js/scripts/customizer.js" type="text/javascript"></script>
    <!-- END STACK JS-->
    <!-- BEGIN PAGE LEVEL JS-->
    <script src="~/app-assets/js/scripts/forms/form-login-register.js" type="text/javascript"></script>
    <!-- END PAGE LEVEL JS-->
</body>
</html>

<script>
    $("#btnLogin").click(function () {
        var date = new Date();
        localStorage.setItem("date", date.getDate)
      
    })
</script>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")


}


